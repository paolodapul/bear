{
  "name": "node-starter",
  "version": "0.0.1",
  "description": "Boilerplate for Node applications",
  "main": "app.js",
  "repository": "git@github.com:paolodapul/node-starter.git",
  "author": "Paolo Dapul <paolodapultech@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "dotenv": "^16.0.0",
    "express": "^4.17.3"
  },
  "scripts": {
    "start": "nodemon src/app.ts",
    "lint": "eslint . --ignore-path .gitignore --ext .ts",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(ts|json)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "check-types": "tsc",
    "validate": "yarn check-format && yarn lint",
    "transpile": "babel src --extensions .ts --out-dir dist",
    "build": "yarn validate && yarn check-types && yarn transpile"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.27",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
