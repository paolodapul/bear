{
  "name": "bearjs",
  "version": "0.0.2",
  "description": "Opinionated Node.js starter",
  "repository": "git@github.com:paolodapul/bear.git",
  "author": "Paolo Dapul <paolodapultech@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">= 18.12.1"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "pnpm clean && pnpm transpile && pnpm dev-server",
    "dev-server": "concurrently \"pnpm swc-watch\" \"pnpm node-watch\"",
    "swc-watch": "swc src -w --out-dir dist",
    "node-watch": "node --watch dist/app.js",
    "start": "node dist/app.js",
    "test:all": "jest",
    "test:watch": "jest --watch",
    "test:push": "jest --silent --noStackTrace",
    "lint": "eslint . --ignore-path .gitignore --ext .ts",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(ts|json)\"",
    "format": "pnpm prettier --write",
    "check-format": "pnpm prettier --check",
    "check-types": "tsc",
    "validate": "pnpm check-types && pnpm lint && pnpm check-format",
    "transpile": "swc src -d dist -C exclude=.test.ts -C minify=true -C jsc.minify.mangle=true -C jsc.minify.compress=true",
    "build": "pnpm clean && pnpm validate && pnpm transpile",
    "prepare": "husky install",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@prisma/client": "^4.6.1",
    "concurrently": "^7.5.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "express-winston": "^4.2.0",
    "http-graceful-shutdown": "^3.1.9",
    "loglevel": "^1.8.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.1",
    "swagger-ui-express": "^4.6.0",
    "winston": "^3.8.2",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.14",
    "@swc/jest": "^0.2.23",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.2.2",
    "@types/node": "^17.0.27",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "husky": "^7.0.4",
    "jest": "^29.2.2",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "prisma": "^4.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
